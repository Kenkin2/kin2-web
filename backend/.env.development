# Development-Specific Overrides
NODE_ENV=development
PORT=3000

APP_URL=http://localhost:5173
API_URL=http://localhost:3000

CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Local Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kin2_dev

# Local Redis
REDIS_URL=redis://localhost:6379

# Development AI Keys (Limited)
DEEPSEEK_API_KEY=${DEV_DEEPSEEK_KEY}
OPENAI_API_KEY=${DEV_OPENAI_KEY}

# Development Stripe (Test Mode)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_test_xxx

# Development Email (MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false

# Development Security
SESSION_SECRET=dev-session-secret-32-chars-minimum
JWT_SECRET=dev-jwt-secret-32-chars-minimum
JWT_REFRESH_SECRET=dev-refresh-secret-32-chars-minimum

# Mock Services
MOCK_AI_RESPONSES=true
MOCK_EMAIL_SENDING=true
MOCK_PAYMENTS=true

# Debugging
DEBUG=true
PRISMA_LOG_QUERIES=true
DEBUG_DATABASE=true
