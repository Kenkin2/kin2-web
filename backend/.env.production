# Production-Specific Overrides
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

APP_URL=https://app.kin2.co.uk
API_URL=https://api.kin2.co.uk
ADMIN_URL=https://admin.kin2.co.uk

CORS_ORIGIN=https://app.kin2.co.uk,https://admin.kin2.co.uk

# Production Database (Managed Service)
DATABASE_URL=postgresql://prod_user:${DB_PASSWORD}@production-db.cluster-abc.eu-west-1.rds.amazonaws.com:5432/kin2_prod

# Production Redis
REDIS_URL=rediss://:${REDIS_PASSWORD}@redis-production.kin2.co.uk:6379

# Production AI Keys
DEEPSEEK_API_KEY=${PROD_DEEPSEEK_KEY}
OPENAI_API_KEY=${PROD_OPENAI_KEY}

# Production Stripe
STRIPE_SECRET_KEY=${PROD_STRIPE_SECRET}
STRIPE_PUBLISHABLE_KEY=${PROD_STRIPE_PUBLISHABLE}
STRIPE_WEBHOOK_SECRET=${PROD_STRIPE_WEBHOOK}

# Production Email
SMTP_HOST=email-smtp.eu-west-1.amazonaws.com
SMTP_PORT=587
SMTP_SECURE=true

# Security
SESSION_SECRET=${PROD_SESSION_SECRET}
JWT_SECRET=${PROD_JWT_SECRET}
JWT_REFRESH_SECRET=${PROD_JWT_REFRESH_SECRET}

# Monitoring
SENTRY_DSN=${PROD_SENTRY_DSN}
NEW_RELIC_LICENSE_KEY=${PROD_NEW_RELIC_KEY}

# Performance
CACHE_TTL_DEFAULT=1800
QUERY_CACHE_TTL=30000

# Feature Flags
ENABLE_MOCK_SERVICES=false
DEBUG=false
