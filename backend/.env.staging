# Staging-Specific Overrides
NODE_ENV=staging
PORT=3000

APP_URL=https://staging.kin2.co.uk
API_URL=https://api-staging.kin2.co.uk

CORS_ORIGIN=https://staging.kin2.co.uk,https://api-staging.kin2.co.uk

# Staging Database
DATABASE_URL=postgresql://staging_user:${STAGING_DB_PASSWORD}@staging-db.cluster-abc.eu-west-1.rds.amazonaws.com:5432/kin2_staging

# Staging Redis
REDIS_URL=rediss://:${STAGING_REDIS_PASSWORD}@redis-staging.kin2.co.uk:6379

# Staging AI Keys
DEEPSEEK_API_KEY=${STAGING_DEEPSEEK_KEY}
OPENAI_API_KEY=${STAGING_OPENAI_KEY}

# Staging Stripe (Test Mode)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_test_xxx

# Feature Flags
ENABLE_BETA_FEATURES=true
ENABLE_EXPERIMENTAL_AI=true
